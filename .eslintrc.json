{
  "env": {
    "node": true
  },
  "extends": "eslint:all",
  "globals": {
    "atom": true,
    "document": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "dot-location": [
      "error",
      "property"
    ],
    "function-paren-newline": [
      "error",
      "multiline"
    ],
    "indent": [
      "error",
      2
    ],
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "no-magic-numbers": [
      "error",
      {
        "ignore": [
          0,
          1
        ]
      }
    ],
    "no-ternary": "off",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "one-var": [
      "error",
      "never"
    ],
    "padded-blocks": [
      "error",
      "never"
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "strict": [
      "error",
      "global"
    ]
  }
}
